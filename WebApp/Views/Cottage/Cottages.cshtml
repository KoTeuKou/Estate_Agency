@using Entities
@using WebApp.Models
@model CottageParentModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-info clearfix">
    <h1 class="h1 bottom-left">Коттеджы</h1>

</div>

@using (Html.BeginForm("GetCottagesByFilters", "Cottage", FormMethod.Post))
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">
                <h3>Количество этажей</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальный</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MinFloorNumber)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальный</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MaxFloorNumber)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Площадь</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MinSquareOfFlat)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MaxSquareOfFlat)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Кол-во комнат</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальное</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MinNumOfRooms)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальное</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MaxNumOfRooms)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Цена</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MinPrice)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.CottageFilter.MaxPrice)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Адрес</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Город</label>
                    @Html.EditorFor(model => model.CottageFilter.City)

                    <label class="col-2 col-form-label">Улица</label>
                    @Html.EditorFor(model => model.CottageFilter.Street)
                </div>
            </th>
        </tr>
        <tr>
            <h2>Поиск по фильтрам</h2>
        </tr>
        </thead>
    </table>
    <div align="center" style="margin: 10px;padding: 10px">
        <input type="submit" value="Искать🔎" class="btn btn-primary" />
    </div>
}
<div>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
        Добавление коттеджа
    </button>
    <div class="collapse" id="collapse2">
        <div class="card card-body">
            @using (Html.BeginForm("Add", "Cottage", FormMethod.Post))
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Номер коттеджа</label>
                        @Html.EditorFor(model => model.CottageModel.CottageNumber)
                    </div>
                    <div class="form-group col-md-6">
                        <label>Количество этажей</label>
                        @Html.EditorFor(model => model.CottageModel.NumOfFloors)
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Площадь</label>
                        @Html.EditorFor(model => model.CottageModel.SquareOfCottage)
                    </div>
                    <div class="form-group col-md-6">
                        <label>Количество комнат</label>
                        @Html.EditorFor(model => model.CottageModel.NumOfRooms)
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Цена</label>
                        @Html.EditorFor(model => model.CottageModel.Price)
                    </div>
                    <div class="form-group col-md-6">
                        <label>Владелец</label>
                        @Html.EditorFor(model => model.CottageModel.Owner)
                    </div>
                    <div class="form-group row width-class">
                        <label class="col-2 col-form-label">Город</label>
                        @Html.EditorFor(model => model.CottageModel.City)

                        <div style="display:none;padding-top: 5px">
                            <label class="col-2 col-form-label">Улица</label>
                            @Html.EditorFor(model => model.CottageModel.Street)
                        </div>
                    </div>
                </div>
                <input type="submit" value="Добавить">
            }
        </div>
    </div>
</div>

<table class="table">
    <tbody>
    <thead>
    <tr>
        <th scope="col">
            <div>
                @using (Html.BeginForm("SortByField", "Cottage", FormMethod.Post))
                {
                    @Html.Hidden("sortBy", SortBy.NUMBER)
                    <input type="submit" class="btn btn-primary btn-sm" value="№ коттеджа">
                }
            </div>
        </th>
        <th scope="col">
            <div>
                @using (Html.BeginForm("SortByField", "Cottage", FormMethod.Post))
                {
                    @Html.Hidden("sortBy", SortBy.FLOOR)
                    <input type="submit" class="btn btn-primary btn-sm" value="Кол-во этажей">
                }
            </div>
        </th>
        <th scope="col">
            <div>
                @using (Html.BeginForm("SortByField", "Cottage", FormMethod.Post))
                {
                    @Html.Hidden("sortBy", SortBy.SQUARE)
                    <input type="submit" class="btn btn-primary btn-sm" value="Площадь">
                }
            </div>
        </th>
        <th scope="col">
            <div>
                @using (Html.BeginForm("SortByField", "Cottage", FormMethod.Post))
                {
                    @Html.Hidden("sortBy", SortBy.ROOMS)
                    <input type="submit" class="btn btn-primary btn-sm" value="Кол-во комнат">
                }
            </div>
        </th>
        <th scope="col">
            <div>
                @using (Html.BeginForm("SortByField", "Cottage", FormMethod.Post))
                {
                    @Html.Hidden("sortBy", SortBy.PRICE)
                    <input type="submit" class="btn btn-primary btn-sm" value="Цена">
                }
            </div>
        </th>
        <th scope="col">
            Улица
        </th>
        <th scope="col">
            Город
        </th>
    </tr>
    </thead>

    @foreach (var cottage in (IEnumerable<Cottage>) @ViewData["Cottages"])
    {
        <tr>
            <td>@cottage.CottageNumber</td>
            <td>@cottage.NumOfFloors</td>
            <td>@cottage.SquareOfCottage кв.м.</td>
            <td>@cottage.NumOfRooms</td>
            <td>@cottage.Price руб.</td>
            <td>@cottage.Street</td>
            <td>@cottage.City</td>
        </tr>
    }
    </tbody>
</table>

<style>
.width-class{
width: 150px;
}
</style>