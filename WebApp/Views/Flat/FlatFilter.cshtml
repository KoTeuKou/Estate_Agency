@using WebApp.Models
@model WebApp.Models.FlatFilterVm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GetFlatsByFilters", "Flat", FormMethod.Post))
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">
                <h3>Номер этажа</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальный</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MinFloorNumber)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальный</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MaxFloorNumber)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Площадь</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MinSquareOfFlat)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MaxSquareOfFlat)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Кол-во комнат</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальное</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MinNumOfRooms)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальное</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MaxNumOfRooms)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Цена</h3>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Минимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MinPrice)
                    </div>
                </div>
                <div class="form-group row width-class">
                    <label class="col-2 col-form-label">Максимальная</label>
                    <div class="col-2">
                        @Html.EditorFor(model => model.MaxPrice)
                    </div>
                </div>
            </th>
            <th scope="col">
                <h3>Адрес</h3>
                <div class="form-group row width-class">
                    <div class="form-group row width-class">
                        <div class="col-2">
                            <select onchange="document.getElementById('house').value = this.value">
                                <option selected  value=""></option>
                                @foreach (var house in (IEnumerable<HouseVm>) ViewData["Houses"])
                                {
                                    <option label="@house.HouseNum, @house.StreetName, @house.CityName" value="@house.IdHouse"></option>
                                }

                            </select>
                        </div>
                    </div>
                </div>
                @Html.EditorFor(model => model.NumOfHouse, new {htmlAttributes = new {@id = "house", style = "visibility: hidden"}})
            </th>
        </tr>
        <tr>
            <h2>Поиск по фильтрам</h2>
        </tr>
        </thead>
    </table>
    <div align="center" style="margin: 10px;padding: 10px">
        <button type="submit" class="btn btn-primary btn">Искать🔎</button>
    </div>
}

<style>
.width-class{
width: 150px;
}
</style>